<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_search"
            android:layout_width="@dimen/menu_item_dim"
            android:layout_height="@dimen/menu_item_dim"
            android:layout_margin="@dimen/menu_item_margin"
            android:background="@drawable/ic_search" />

        <Button
            android:id="@+id/button_create_phrase"
            android:layout_width="@dimen/menu_item_dim"
            android:layout_height="@dimen/menu_item_dim"
            android:layout_margin="@dimen/menu_item_margin"
            android:background="@drawable/ic_pencil" />

        <Button
            android:id="@+id/button_favorites"
            android:layout_width="@dimen/menu_item_dim"
            android:layout_height="@dimen/menu_item_dim"
            android:layout_margin="@dimen/menu_item_margin"
            android:background="@drawable/ic_favorites" />

        <Button
            android:id="@+id/button_premium_version"
            android:layout_width="@dimen/menu_item_dim"
            android:layout_height="@dimen/menu_item_dim"
            android:layout_margin="@dimen/menu_item_margin"
            android:background="@drawable/ic_premium_version" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="@dimen/menu_item_dim"
            android:layout_height="@dimen/menu_item_dim"
            android:layout_margin="@dimen/menu_item_margin"
            android:background="@drawable/ic_settings" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:orientation="vertical"
        android:overScrollMode="never" />

</LinearLayout>
